
  <!--Create Tags-->
  <div class="page contact">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-12 title text-center">
          <h1>Tags</h1>
        </div>

        <div class="col-lg-8 content">
          <%= form_for [:admin, @tag] do |f| %>
              <div class="form-group">
                <%= f.text_area :name, class: 'form-control', placeholder: 'e.g Ruby, Python, ReactJS' %>
              </div>
              <%= f.submit 'Submit', class: 'btn' %>
          <% end %>
        </div>

      </div>
    </div>
  </div>


  <!--Post List-->
  <div class="list">
    <div class="container">
      <div class="row">

        <!--Tag List-->
        <div class="col-lg-12">
          <div class="box grid recipes">

            <table class="table table-bordered table-hover">
              <thead>
                <tr>
                  <th style="text-align: center">Name</th>
                  <th style="text-align: center">Status</th>
                  <th style="text-align: center">Created</th>
                  <th style="text-align: center">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @tags.each do |tag| %>
                  <tr>
                    <td><%= tag.name %></td>
                    <td><%= status_converter(tag.in_use?, truthy: 'in use', falsey: 'not in use') %></td>
                    <td><%= time_ago tag.created_at %></td>
                    <td>
                      <%= link_to edit_admin_tag_path(tag) do %>
                        <button type="button" name="button">Edit</button> |
                      <% end %>

                      <%= create_deleteable_button tag %>

                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
