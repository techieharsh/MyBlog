
  <div class="page contact">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-12 title text-center">
          <h1>Settings Edit</h1>
        </div>

        <div class="col-lg-8 content">
          <%= form_for [:admin, @setting] do |f| %>
            <%= render 'validation_errors', object: @setting %>
              <div class="form-group">
                <label>Site Name</label>
                <%= f.text_field :site_name, class: 'form-control' %>
              </div>
              <div class="form-group">
                <label>Post Per Page</label>
                <%= f.number_field :post_per_page, class: 'form-control' %>
              </div>
              <div class="form-group">
                <label>Under Maintenance</label><br/>
                <%= f.check_box :under_maintenance %>
              </div>
              <div class="form-group">
                <label>Prevent Commenting</label>
                <select class="form-control" id: <%= f.select :prevent_commenting, [['disable', false], ['active', true]] %>
                <%#= f.select :prevent_commenting, [['disable', false], ['active', true]],
                class: 'form-control' %>

              </div>
              <div class="form-group">
                <label>Tag Visibility</label>
                <select class="form-control" id=<%= f.select :tag_visibility, [['active', true], ['disable', false]] %>
                <%#= f.select :tag_visibility, [['active', true], ['disable', false]],
                class: 'form-control' %>
              </div>

              <%= f.submit 'Update', class: 'btn' %>
          <% end %>
        </div>

      </div>
    </div>
  </div>
