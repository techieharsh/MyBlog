
<div class="list">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h5><i class="fa fa-cutlery" aria-hidden="true"></i> Posts </h5>
      </div>
      <div class="col-lg-12 col-sm-6">
        <div class="box grid recipes"><br/>

          <%= link_to 'Create New Post', new_admin_post_path, style: 'color: green; font-weight: bold;' %><br/><br/>
           <%= render 'search', route: admin_posts_path %><br/>
          <table class="table table-bordered table-hover">
            <thead>
              <tr>
                <th style="text-align: center">Title</th>
                <th style="text-align: center">Publish</th>
                <th style="text-align: center">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @posts.each do |post| %>
                <tr>
                  <td><%= truncate(post.title, length: 60, separate: '') %></td>
                  <td><%= status_converter(post.publish, truthy: 'Active', falsey:'Pending') %></td>
                  <td>
                    <%= link_to 'Edit', edit_admin_post_path(post), style: 'color: #f0ad4e; font-weight: bold;' %>
                    <%= link_to 'View', admin_post_path(post), style: 'color: #1ab394; font-weight: bold;' %>
                    <%= link_to 'Delete', admin_post_path(post), method: :delete, data: {confirm: 'Are you sure?'},
                                          style: 'color: #d9534f; font-weight: bold;' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="pagination">
          <%= paginate @posts, theme: 'twitter-bootstrap-4' %>
        </div>
      </div>
    </div>
  </div>
</div>
