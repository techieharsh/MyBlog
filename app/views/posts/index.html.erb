  <!-- List Recipes -->
  <div class="list">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <h5><i class="fa fa-cutlery" aria-hidden="true"></i>  List Recipes</h5>
        </div>
        <% @posts.each do |post| %>
          <div class="col-lg-4 col-sm-6">
            <div class="box grid recipes">

                <%= image_tag(post.image) %>
                <h2><%= truncate(post.title, length: 60, separator: ' ') %></h2><br/>

                <p>
                  <%= truncate(post.content, length: 100, separator: ' ') { link_to 'Read More', post_path(post) } %>
                </p>

                <div class="tag">
                  <% if Setting.tag_visible? %>
                    <p>
                      <% post.tags.each do |tag| %>
                        <%= link_to tag.name, posts_path(tag: tag.name) %>
                      <% end %>
                    </p>
                  <% end %>
                </div>
            </div>
          </div>
        <% end %>
        <div class="col-lg-12 text-center">
          <%= paginate @posts %>
        </div>
      </div>
    </div>
  </div>
